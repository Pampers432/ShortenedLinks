@model UrlEntry

@{
    ViewData["Title"] = "Редактировать ссылку";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="JumpsCount" />

    <div class="form-group">
        <label asp-for="LongUrl" class="control-label"></label>
        <input asp-for="LongUrl" class="form-control" />
        <span asp-validation-for="LongUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShortUrl" class="control-label"></label>
        <input asp-for="ShortUrl" class="form-control" />
        <span asp-validation-for="ShortUrl" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}