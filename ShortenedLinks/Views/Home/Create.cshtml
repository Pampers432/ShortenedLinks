@model UrlEntry

@{
    ViewData["Title"] = "Создать сокращенную ссылку";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="LongUrl" class="control-label"></label>
        <input asp-for="LongUrl" class="form-control" />
        <span asp-validation-for="LongUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShortUrl" class="control-label"></label>
        <input asp-for="ShortUrl" class="form-control" readonly />
        <small class="form-text text-muted">Это ваша сокращенная ссылка</small>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}